<%- include('../partials/header') %>

<div class="page-header">
  <div>
    <nav class="breadcrumb">
      <a href="/categories">Categorías</a>
      <span>›</span>
      <span>Nuevo Producto</span>
    </nav>
    <h1 class="page-title">Nuevo Producto</h1>
  </div>
</div>

<!-- ──── ERRORES ──── -->
<% if (errors && errors.length > 0) { %>
  <div class="alert alert-danger">
    <strong>Por favor corrige los siguientes errores:</strong>
    <ul class="error-list">
      <% errors.forEach(err => { %>
        <li><%= err.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<!-- ──── FORMULARIO ──── -->
<div class="form-card">
  <form action="/items" method="POST" novalidate>

    <div class="form-group">
      <label class="form-label" for="name">
        Nombre del Producto <span class="required">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        class="form-control <%= errors && errors.some(e => e.path === 'name') ? 'is-invalid' : '' %>"
        value="<%= item.name || '' %>"
        placeholder="Ej. Fender Stratocaster, Yamaha P-45..."
        required
        maxlength="200"
      />
    </div>

    <div class="form-group">
      <label class="form-label" for="description">Descripción</label>
      <textarea
        id="description"
        name="description"
        class="form-control"
        rows="3"
        placeholder="Descripción detallada del producto..."
        maxlength="1000"
      ><%= item.description || '' %></textarea>
      <small class="form-hint">Opcional. Máximo 1000 caracteres.</small>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label class="form-label" for="price">
          Precio (USD) <span class="required">*</span>
        </label>
        <div class="input-prefix">
          <span class="prefix-symbol">$</span>
          <input
            type="number"
            id="price"
            name="price"
            class="form-control <%= errors && errors.some(e => e.path === 'price') ? 'is-invalid' : '' %>"
            value="<%= item.price || '' %>"
            placeholder="0.00"
            step="0.01"
            min="0.01"
            required
          />
        </div>
      </div>

      <div class="form-group">
        <label class="form-label" for="quantity">
          Cantidad en Stock <span class="required">*</span>
        </label>
        <input
          type="number"
          id="quantity"
          name="quantity"
          class="form-control <%= errors && errors.some(e => e.path === 'quantity') ? 'is-invalid' : '' %>"
          value="<%= item.quantity !== undefined ? item.quantity : '' %>"
          placeholder="0"
          min="0"
          required
        />
      </div>
    </div>

    <div class="form-group">
      <label class="form-label" for="category_id">
        Categoría <span class="required">*</span>
      </label>
      <select
        id="category_id"
        name="category_id"
        class="form-control form-select <%= errors && errors.some(e => e.path === 'category_id') ? 'is-invalid' : '' %>"
        required
      >
        <option value="">— Selecciona una categoría —</option>
        <% categories.forEach(cat => { %>
          <option value="<%= cat.id %>" <%= String(item.category_id) === String(cat.id) ? 'selected' : '' %>>
            <%= cat.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <div class="form-actions">
      <a href="/categories" class="btn btn-outline">Cancelar</a>
      <button type="submit" class="btn btn-primary">Crear Producto</button>
    </div>

  </form>
</div>

<%- include('../partials/footer') %>
