<%- include('../partials/header') %>

<div class="page-header">
  <div>
    <nav class="breadcrumb">
      <a href="/categories">Categor√≠as</a>
      <span>‚Ä∫</span>
      <a href="/categories/<%= item.category_id %>"><%= item.category_name %></a>
      <span>‚Ä∫</span>
      <a href="/items/<%= item.id %>"><%= item.name %></a>
      <span>‚Ä∫</span>
      <span>Editar</span>
    </nav>
    <h1 class="page-title">Editar Producto</h1>
  </div>
</div>

<!-- ‚îÄ‚îÄ‚îÄ‚îÄ ERRORES ‚îÄ‚îÄ‚îÄ‚îÄ -->
<% if (errors && errors.length > 0) { %>
  <div class="alert alert-danger">
    <strong>Por favor corrige los siguientes errores:</strong>
    <ul class="error-list">
      <% errors.forEach(err => { %>
        <li><%= err.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<!-- ‚îÄ‚îÄ‚îÄ‚îÄ FORMULARIO ‚îÄ‚îÄ‚îÄ‚îÄ -->
<div class="form-card">
  <form action="/items/<%= item.id %>?_method=PUT" method="POST" novalidate>

    <div class="form-group">
      <label class="form-label" for="name">
        Nombre del Producto <span class="required">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        class="form-control <%= errors && errors.some(e => e.path === 'name') ? 'is-invalid' : '' %>"
        value="<%= item.name || '' %>"
        placeholder="Nombre del producto"
        required
        maxlength="200"
      />
    </div>

    <div class="form-group">
      <label class="form-label" for="description">Descripci√≥n</label>
      <textarea
        id="description"
        name="description"
        class="form-control"
        rows="3"
        placeholder="Descripci√≥n del producto..."
        maxlength="1000"
      ><%= item.description || '' %></textarea>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label class="form-label" for="price">
          Precio (USD) <span class="required">*</span>
        </label>
        <div class="input-prefix">
          <span class="prefix-symbol">$</span>
          <input
            type="number"
            id="price"
            name="price"
            class="form-control <%= errors && errors.some(e => e.path === 'price') ? 'is-invalid' : '' %>"
            value="<%= item.price || '' %>"
            step="0.01"
            min="0.01"
            required
          />
        </div>
      </div>

      <div class="form-group">
        <label class="form-label" for="quantity">
          Cantidad en Stock <span class="required">*</span>
        </label>
        <input
          type="number"
          id="quantity"
          name="quantity"
          class="form-control <%= errors && errors.some(e => e.path === 'quantity') ? 'is-invalid' : '' %>"
          value="<%= item.quantity !== undefined ? item.quantity : '' %>"
          min="0"
          required
        />
      </div>
    </div>

    <div class="form-group">
      <label class="form-label" for="category_id">
        Categor√≠a <span class="required">*</span>
      </label>
      <select
        id="category_id"
        name="category_id"
        class="form-control form-select"
        required
      >
        <option value="">‚Äî Selecciona una categor√≠a ‚Äî</option>
        <% categories.forEach(cat => { %>
          <option value="<%= cat.id %>" <%= String(item.category_id) === String(cat.id) ? 'selected' : '' %>>
            <%= cat.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <!-- ‚îÄ‚îÄ‚îÄ‚îÄ CONTRASE√ëA ADMIN ‚îÄ‚îÄ‚îÄ‚îÄ -->
    <div class="admin-password-section">
      <div class="admin-password-header">
        <span>üîí</span>
        <div>
          <strong>Confirmaci√≥n de Administrador</strong>
          <p>Para guardar cambios debes ingresar la contrase√±a de administrador.</p>
        </div>
      </div>
      <div class="form-group">
        <label class="form-label" for="admin_password">
          Contrase√±a de Administrador <span class="required">*</span>
        </label>
        <input
          type="password"
          id="admin_password"
          name="admin_password"
          class="form-control"
          placeholder="Contrase√±a de admin..."
          required
          autocomplete="off"
        />
      </div>
    </div>

    <div class="form-actions">
      <a href="/items/<%= item.id %>" class="btn btn-outline">Cancelar</a>
      <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    </div>

  </form>
</div>

<%- include('../partials/footer') %>
